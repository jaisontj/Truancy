<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/left_mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/left_titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_left_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:gravity="center"
                android:text="NOTIFICATIONS"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/left_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/plain_box_bg"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/left_sub_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/tv_left_sub_title2_day"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.4"
                    android:text="Sunday"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#a09c9c" />

                <Button
                    android:id="@+id/button_left_sub_title2_all"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="#00000000"
                    android:text="All"
                    android:textColor="#a09c9c" />

                <Button
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:text="|"
                    android:textColor="#a09c9c" />

                <Button
                    android:id="@+id/button_left_sub_title2_missed"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="#00000000"
                    android:text="Missed"
                    android:textColor="#a09c9c" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/left_sub_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/button_sunday"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.14"
                    android:background="#00000000"
                    android:text="S" />

                <Button
                    android:id="@+id/button_monday"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.14"
                    android:background="#00000000"
                    android:text="M" />

                <Button
                    android:id="@+id/button_tuesday"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.14"
                    android:background="#00000000"
                    android:text="T" />

                <Button
                    android:id="@+id/button_wednesday"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.14"
                    android:background="#00000000"
                    android:text="W" />

                <Button
                    android:id="@+id/button_thursday"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.14"
                    android:background="#00000000"
                    android:text="T" />

                <Button
                    android:id="@+id/button_friday"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.14"
                    android:background="#00000000"
                    android:text="F" />

                <Button
                    android:id="@+id/button_saturday"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.14"
                    android:background="#00000000"
                    android:text="S" />
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:id="@+id/left_scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/main_page_box"
            android:overScrollMode="never"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/left_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/left_box_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp" >

                    <TextView
                        android:id="@+id/tv_left_box_title"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.4"
                        android:text="Sunday"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#a09c9c" />

                    <Button
                        android:id="@+id/button_left_All"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:background="#00000000"
                        android:text="All"
                        android:textColor="#a09c9c" />

                    <Button
                        android:layout_width="2dp"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:text="|"
                        android:textColor="#a09c9c" />

                    <Button
                        android:id="@+id/button_left_Missed"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:background="#00000000"
                        android:text="Missed"
                        android:textColor="#a09c9c" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/line" />

                <LinearLayout
                    android:id="@+id/left_entrySpace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout><!-- From: file:/Users/Jaison/Downloads/Truancy/app/src/main/res/layout/fragment_page_left.xml -->