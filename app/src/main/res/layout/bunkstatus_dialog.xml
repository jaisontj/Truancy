    <Button
        android:id="@+id/bunk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bunk" />

    <Button
        android:id="@+id/attend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Attend" />

    <Button
        android:id="@+id/noclass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NoClass" />

</LinearLayout>
