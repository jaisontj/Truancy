<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/right_mainlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_right_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="TIMETABLE"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/right_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/plain_box_bg"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/right_sub_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/button_sunday"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.14"
                    android:background="#00000000"
                    android:text="S" />

                <Button
                    android:id="@+id/button_monday"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.14"
                    android:background="#00000000"
                    android:text="M" />

                <Button
                    android:id="@+id/button_tuesday"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.14"
                    android:background="#00000000"
                    android:text="T" />

                <Button
                    android:id="@+id/button_wednesday"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.14"
                    android:background="#00000000"
                    android:text="W" />

                <Button
                    android:id="@+id/button_thursday"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.14"
                    android:background="#00000000"
                    android:text="T" />

                <Button
                    android:id="@+id/button_friday"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.14"
                    android:background="#00000000"
                    android:text="F" />

                <Button
                    android:id="@+id/button_saturday"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.14"
                    android:background="#00000000"
                    android:text="S" />
            </LinearLayout>

            <TextView
                android:id="@+id/right_sub_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="TODAY"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#a09c9c"
                android:visibility="gone" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/right_scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/main_page_box"
            android:overScrollMode="never"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/right_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/right_box_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="TODAY"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#a09c9c" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/line" />

                <LinearLayout
                    android:id="@+id/right_entrySpace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>